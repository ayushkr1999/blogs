extends layout

block content
  .container
    h1 #{article.title}
    h3.post-subtitle #{article.subtitle}
    p.post-meta
      | Posted by #{article.user}
      | on #{moment(article.created_at).format('MMMM Do YYYY, h:mm:ss a')}
    p.post-body
      h3
        | !{article.body}
      a(href='/articles/admin/show/add/'+article._id) Push-Article
