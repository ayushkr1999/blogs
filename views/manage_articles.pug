extends layout

block content
  .container
    h1 Welcome #{name}
    .row
      .col-md-9
        h1 #{title}
      .col-md-3
        a(class="btn btn-default create-btn" ,href="/manage/articles/add") Add Article
    !=messages()
    table(class='table table-striped')
      tr
        th Articles Title
        th Date Published
        th Edit Blog
      each article , i in articles
        tr
          td #{article.title}
          td #{moment(article.created_at).format('MMMM do YYYY, h:mm:ss a')}

          td
            a(class="btn btn-tiny btn-default" href='/manage/articles/edit/'+article._id) Edit
